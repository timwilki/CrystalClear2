<div class="text-center">
  <div class="card p-4" style="max-width: 500px; margin: 0 auto;">
    <h2 class="mb-4">Discover Your Birth Stone</h2>
    <p class="mb-4">Enter your birth month and day to find your special gemstone and learn about its magical properties.</p>
    
    <% if flash[:alert] %>
      <div class="alert alert-danger mb-4" role="alert">
        <%= flash[:alert] %>
      </div>
    <% end %>
    
    <%= form_with url: birth_stone_path, method: :post, local: true, class: "birth-date-form" do |form| %>
      <div class="form-group">
        <%= form.label :month, "Birth Month", class: "form-label" %>
        <%= form.select :month, 
            options_for_select([
              ['January', 1], ['February', 2], ['March', 3], ['April', 4],
              ['May', 5], ['June', 6], ['July', 7], ['August', 8],
              ['September', 9], ['October', 10], ['November', 11], ['December', 12]
            ]), 
            { prompt: "Select your birth month" }, 
            { class: "form-control" } %>
      </div>
      
      <div class="form-group">
        <%= form.label :day, "Birth Day", class: "form-label" %>
        <%= form.select :day, 
            options_for_select((1..31).map { |d| [d, d] }), 
            { prompt: "Select your birth day" }, 
            { class: "form-control" } %>
      </div>
      
      <%= form.submit "Find My Birth Stone", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
